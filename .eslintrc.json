{
  "extends": ["@antfu", "prettier"],
  "overrides": [
    {
      "files": ["*.ts", "*.vue"],
      "rules": {
        "semi": ["error", "always"],
        "@typescript-eslint/semi": ["error", "always"],
        "brace-style": ["error", "1tbs", { "allowSingleLine": true }]
      }
    },
    {
      "files": ["src/auto-imports.d.ts", "src/components.d.ts"],
      "rules": {
        "semi": "off",
        "@typescript-eslint/semi": "off"
      }
    }
  ]
}
